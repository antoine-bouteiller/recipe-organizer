{
  "name": "recipe-organizer",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build && bun run typecheck",
    "dev": "vite",
    "lint": "bun oxlint --fix --type-aware",
    "typecheck": "tsgo --noEmit",
    "format": "oxfmt .",
    "serve": "vite preview",
    "cf-typegen": "wrangler types",
    "migration:apply:local": "bun run ./scripts/apply-migration-local.ts",
    "migration:apply:remote": "drizzle-kit migrate",
    "db:dump": "rm -f database.sql && wrangler d1 export recipe-organizer --output=./database.sql --no-schema",
    "db:import": "wrangler d1 execute recipe-organizer --file ./database.sql",
    "prepare": "lefthook install",
    "knip": "knip"
  },
  "dependencies": {
    "@base-ui/react": "^1.2.0",
    "@phosphor-icons/react": "^2.1.10",
    "@tanstack/react-form": "^1.28.3",
    "@tanstack/react-query": "^5.90.21",
    "@tanstack/react-router": "^1.161.3",
    "@tanstack/react-router-ssr-query": "^1.161.3",
    "@tanstack/react-start": "^1.161.3",
    "@tiptap/pm": "^3.20.0",
    "@tiptap/react": "^3.20.0",
    "@tiptap/starter-kit": "^3.20.0",
    "@valibot/i18n": "^1.0.0",
    "@vidstack/react": "^1.12.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^1.0.0-beta.15-859cf75",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.5.0",
    "tw-animate-css": "^1.4.0",
    "valibot": "^1.2.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.25.2",
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@serwist/vite": "^9.5.6",
    "@serwist/window": "^9.5.6",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.2.0",
    "@tanstack/devtools-vite": "^0.5.1",
    "@tanstack/react-devtools": "^0.9.6",
    "@tanstack/react-query-devtools": "^5.91.3",
    "@tanstack/react-router-devtools": "^1.161.3",
    "@tsconfig/vite-react": "^7.0.2",
    "@types/bun": "^1.3.9",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@typescript/native-preview": "7.0.0-dev.20260218.1",
    "@vitejs/plugin-react": "^5.1.4",
    "babel-plugin-react-compiler": "^1.0.0",
    "drizzle-kit": "^1.0.0-beta.15-859cf75",
    "knip": "^5.84.1",
    "lefthook": "^2.1.1",
    "oxfmt": "^0.34.0",
    "oxlint": "^1.49.0",
    "oxlint-tsgolint": "^0.14.2",
    "serwist": "^9.5.6",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.9.3",
    "vite": "^8.0.0-beta.15",
    "vite-tsconfig-paths": "^6.1.1",
    "wrangler": "^4.67.0"
  },
  "overrides": {
    "vite": "^8.0.0-beta.15"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
