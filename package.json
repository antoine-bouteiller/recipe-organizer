{
  "name": "recipe-organizer",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build && tsgo",
    "dev": "vite",
    "lint": "oxlint --fix --type-aware",
    "typecheck": "tsgo --noEmit",
    "format": "oxfmt .",
    "serve": "vite preview",
    "test": "vitest run",
    "cf-typegen": "wrangler types",
    "migration:apply": "wrangler d1 migrations apply recipe-organizer",
    "db:dump": "rm -f database.sql && wrangler d1 export recipe-organizer --output=./database.sql --no-schema",
    "db:import": "wrangler d1 execute recipe-organizer --file ./database.sql",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@base-ui-components/react": "^1.0.0-rc.0",
    "@base-ui/react": "^1.0.0",
    "@phosphor-icons/react": "^2.1.10",
    "@t3-oss/env-core": "^0.13.10",
    "@tanstack/react-form": "^1.27.7",
    "@tanstack/react-query": "^5.90.16",
    "@tanstack/react-router": "^1.145.7",
    "@tanstack/react-router-ssr-query": "^1.145.7",
    "@tanstack/react-start": "^1.145.7",
    "@tanstack/react-store": "^0.8.0",
    "@tiptap/extension-bold": "^3.15.0",
    "@tiptap/extension-bullet-list": "^3.15.0",
    "@tiptap/extension-document": "^3.15.0",
    "@tiptap/extension-dropcursor": "^3.15.0",
    "@tiptap/extension-gapcursor": "^3.15.0",
    "@tiptap/extension-hard-break": "^3.15.0",
    "@tiptap/extension-history": "^3.15.0",
    "@tiptap/extension-italic": "^3.15.0",
    "@tiptap/extension-list-item": "^3.15.0",
    "@tiptap/extension-paragraph": "^3.15.0",
    "@tiptap/extension-text": "^3.15.0",
    "@tiptap/extension-underline": "^3.15.0",
    "@tiptap/html": "^3.15.0",
    "@tiptap/pm": "^3.15.0",
    "@tiptap/react": "^3.15.0",
    "arkenv": "^0.8.3",
    "arktype": "^2.1.29",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "vaul-base": "^1.0.0"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.19.0",
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@tsconfig/vite-react": "^7.0.2",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript/native-preview": "7.0.0-dev.20251124.1",
    "@vitejs/plugin-react": "^5.1.2",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint-plugin-better-tailwindcss": "^3.8.0",
    "eslint-plugin-perfectionist": "^5.2.0",
    "lefthook": "^2.0.13",
