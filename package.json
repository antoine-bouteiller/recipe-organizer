{
  "name": "recipe-organizer",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build && tsgo",
    "dev": "vite",
    "lint": "oxlint --fix --type-aware",
    "typecheck": "tsgo --noEmit",
    "format": "oxfmt",
    "serve": "vite preview",
    "test": "vitest run",
    "cf-typegen": "wrangler types",
    "migration:apply": "wrangler d1 migrations apply recipe-organizer",
    "database:dump": "rm -f database.sql && wrangler d1 export recipe-organizer --output=./database.sql --no-schema",
    "database:import": "wrangler d1 execute recipe-organizer --file ./database.sql",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@base-ui-components/react": "^1.0.0-beta.4",
    "@phosphor-icons/react": "^2.1.10",
    "@tanstack/react-form": "^1.23.9",
    "@tanstack/react-query": "^5.90.8",
    "@tanstack/react-router": "^1.135.2",
    "@tanstack/react-router-ssr-query": "^1.135.2",
    "@tanstack/react-start": "^1.135.2",
    "@tanstack/react-store": "^0.8.0",
    "@tiptap/extension-text-style": "^3.10.7",
    "@tiptap/extensions": "^3.10.7",
    "@tiptap/pm": "^3.10.7",
    "@tiptap/react": "^3.10.7",
    "@tiptap/starter-kit": "^3.10.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "drizzle-kit": "^0.31.6",
    "drizzle-orm": "^0.44.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-number-format": "^5.4.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "vaul-base": "^0.0.6",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.14.2",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.17",
    "@tsconfig/vite-react": "^7.0.2",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "@typescript/native-preview": "7.0.0-dev.20251113.1",
    "@vitejs/plugin-react": "^5.1.1",
    "lefthook": "^2.0.4",
    "oxfmt": "^0.14.0",
    "oxlint": "^1.28.0",
    "oxlint-tsgolint": "^0.6.0",
    "tailwindcss": "^4.1.17",
    "vite": "^7.2.2",
    "vite-tsconfig-paths": "^5.1.4",
    "workbox-build": "^7.3.0",
    "wrangler": "^4.48.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
