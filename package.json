    "@tiptap/extension-text-style": "^3.10.2",
    "@tiptap/extension-typography": "^3.10.2",
    "@tiptap/extensions": "^3.10.2",
    "@tiptap/pm": "^3.10.2",
    "@tiptap/react": "^3.10.2",
    "@tiptap/starter-kit": "^3.10.2",
    "better-auth": "^1.3.34",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
