{
  "name": "recipe-organizer",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build && bun run typecheck",
    "dev": "vite",
    "lint": "oxlint --fix --type-aware",
    "typecheck": "tsgo --noEmit",
    "format": "oxfmt .",
    "serve": "vite preview",
    "test": "vitest run",
    "cf-typegen": "wrangler types",
    "migration:apply": "wrangler d1 migrations apply recipe-organizer",
    "db:dump": "rm -f database.sql && wrangler d1 export recipe-organizer --output=./database.sql --no-schema",
    "db:import": "wrangler d1 execute recipe-organizer --file ./database.sql",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "@phosphor-icons/react": "^2.1.10",
    "@tanstack/react-form": "^1.27.7",
    "@tanstack/react-query": "^5.90.19",
    "@tanstack/react-router": "^1.153.2",
    "@tanstack/react-router-ssr-query": "^1.153.2",
    "@tanstack/react-start": "^1.154.0",
    "@tanstack/react-store": "^0.8.0",
    "@tiptap/pm": "^3.16.0",
    "@tiptap/react": "^3.16.0",
    "@tiptap/starter-kit": "^3.16.0",
    "arktype": "^2.1.29",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "vaul-base": "^1.0.0"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.21.0",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@serwist/vite": "^9.5.0",
    "@serwist/window": "^9.5.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query-devtools": "^5.91.2",
    "@tsconfig/vite-react": "^7.0.2",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@typescript/native-preview": "7.0.0-dev.20260120.1",
    "@vitejs/plugin-react": "^5.1.2",
    "babel-plugin-react-compiler": "^1.0.0",
    "lefthook": "^2.0.15",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "oxlint-tsgolint": "^0.11.1",
    "serwist": "^9.5.0",
    "tailwindcss": "^4.1.18",
    "vite": "^8.0.0-beta.8",
    "vite-tsconfig-paths": "^6.0.4",
    "wrangler": "^4.59.2"
  },
  "overrides": {
    "vite": "^8.0.0-beta.8"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
