    "@tanstack/react-form": "^1.27.7",
    "@tanstack/react-query": "^5.90.16",
    "@tanstack/react-router": "^1.149.3",
    "@tanstack/react-router-ssr-query": "^1.149.3",
    "@tanstack/react-start": "^1.149.3",
    "@tanstack/react-store": "^0.8.0",
    "@tiptap/core": "^3.15.3",
    "@tiptap/extension-bold": "^3.15.3",
    "@tiptap/extension-bullet-list": "^3.15.3",
    "@tiptap/extension-document": "^3.15.3",
    "@tiptap/extension-dropcursor": "^3.15.3",
    "@tiptap/extension-gapcursor": "^3.15.3",
    "@tiptap/extension-hard-break": "^3.15.3",
    "@tiptap/extension-history": "^3.15.3",
    "@tiptap/extension-italic": "^3.15.3",
    "@tiptap/extension-list-item": "^3.15.3",
    "@tiptap/extension-paragraph": "^3.15.3",
    "@tiptap/extension-text": "^3.15.3",
    "@tiptap/extension-underline": "^3.15.3",
    "@tiptap/html": "^3.15.3",
    "@tiptap/pm": "^3.15.3",
    "@tiptap/react": "^3.15.3",
    "arkenv": "^0.8.3",
    "arktype": "^2.1.29",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "vaul-base": "^1.0.0",
    "vite-plugin-pwa": "^1.2.0"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.20.3",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@tsconfig/vite-react": "^7.0.2",
    "@types/bun": "^1.3.6",
    "@types/node": "^25.0.8",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@typescript/native-preview": "7.0.0-dev.20251124.1",
    "@vitejs/plugin-react": "^5.1.2",
    "babel-plugin-react-compiler": "^1.0.0",
