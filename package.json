{
  "name": "recipe-organizer",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build && tsgo",
    "dev": "vite",
    "lint": "oxlint --fix --type-aware",
    "typecheck": "tsgo --noEmit",
    "format": "oxfmt .",
    "serve": "vite preview",
    "test": "vitest run",
    "cf-typegen": "wrangler types",
    "migration:apply": "wrangler d1 migrations apply recipe-organizer",
    "database:dump": "rm -f database.sql && wrangler d1 export recipe-organizer --output=./database.sql --no-schema",
    "database:import": "wrangler d1 execute recipe-organizer --file ./database.sql",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@base-ui-components/react": "^1.0.0-rc.0",
    "@phosphor-icons/react": "^2.1.10",
    "@t3-oss/env-core": "^0.13.8",
    "@tanstack/react-form": "^1.27.0",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-router": "^1.139.14",
    "@tanstack/react-router-ssr-query": "^1.139.14",
    "@tanstack/react-start": "^1.139.14",
    "@tanstack/react-store": "^0.8.0",
    "@tiptap/extension-bold": "^3.12.1",
    "@tiptap/extension-bullet-list": "^3.12.1",
    "@tiptap/extension-document": "^3.12.1",
    "@tiptap/extension-dropcursor": "^3.12.1",
    "@tiptap/extension-gapcursor": "^3.12.1",
    "@tiptap/extension-hard-break": "^3.12.1",
    "@tiptap/extension-history": "^3.12.1",
    "@tiptap/extension-italic": "^3.12.1",
    "@tiptap/extension-list-item": "^3.12.1",
    "@tiptap/extension-paragraph": "^3.12.1",
    "@tiptap/extension-text": "^3.12.1",
    "@tiptap/extension-underline": "^3.12.1",
    "@tiptap/html": "^3.12.1",
    "@tiptap/pm": "^3.12.1",
    "@tiptap/react": "^3.12.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "vaul-base": "^0.0.6",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.16.1",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.17",
    "@tsconfig/vite-react": "^7.0.2",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript/native-preview": "7.0.0-dev.20251124.1",
    "@vitejs/plugin-react": "^5.1.1",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint-plugin-better-tailwindcss": "^3.7.11",
    "eslint-plugin-perfectionist": "^4.15.1",
    "lefthook": "^2.0.7",
    "oxfmt": "^0.16.0",
    "oxlint": "^1.31.0",
    "oxlint-tsgolint": "^0.10.0",
    "tailwindcss": "^4.1.17",
    "vite": "^8.0.0-beta.0",
